/* 结算页面样式 */
.result-container {
  min-height: 100vh;
  background: #f5f7fa;
  display: flex;
  align-items: center;
  justify-content: center;
}

.result-card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(102,126,234,0.10);
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 40rpx;
}

.result-info {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 48rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-info text {
  padding: 8rpx 0;
}

/* 提交状态样式 */
.submitting-status {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.submitting-text {
  font-size: 28rpx;
  color: #667eea;
  margin-left: 10rpx;
}

.back-btn {
  width: 320rpx;
  height: 80rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.15);
  margin-top: 16rpx;
}

.back-btn:active {
  background: linear-gradient(90deg, #43e97b, #38f9d7);
  color: #222;
} 