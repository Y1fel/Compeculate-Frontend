/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  position: relative;
  overflow: hidden;
}

/* 顶部装饰 */
.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  right: -50rpx;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  top: 50rpx;
  left: -75rpx;
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  top: 150rpx;
  right: 100rpx;
}

/* 标题区域 */
.title-section {
  text-align: center;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 2;
}

.main-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.sub-title {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 错误提示区域 */
.error-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 2;
  border-left: 6rpx solid #ff6b6b;
}

.error-message {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.error-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.error-text {
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: 500;
  flex: 1;
}

.retry-btn {
  background: #ff6b6b;
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
}

.retry-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
}

.retry-btn::after {
  border: none;
}

/* 用户信息区域 */
.userinfo-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 2;
}

.section-label {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 30rpx;
  text-align: center;
}

/* 头像区域 */
.avatar-section {
  margin-bottom: 60rpx;
}

.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: none;
  border: none;
  padding: 0;
  position: relative;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 6rpx solid #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.avatar-wrapper:active .avatar {
  transform: scale(0.95);
}

.avatar-edit-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  background: #667eea;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.edit-text {
  color: #ffffff;
  font-size: 20rpx;
  font-weight: 500;
}

/* 昵称区域 */
.nickname-section {
  margin-bottom: 40rpx;
}

.nickname-wrapper {
  position: relative;
}

.nickname-input {
  width: 80%;
  height: 88rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding-right: 60rpx;
  font-size: 32rpx;
  color: #333333;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.nickname-input:focus {
  background: #ffffff;
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.input-border {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.nickname-input:focus + .input-border {
  transform: scaleX(1);
}

/* 兼容旧版本按钮 */
.legacy-section {
  margin-top: 40rpx;
  padding-top: 40rpx;
  border-top: 2rpx solid #f0f0f0;
}

.legacy-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.legacy-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.legacy-btn::after {
  border: none;
}

/* 操作按钮区域 */
.action-section {
  position: relative;
  z-index: 2;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 16rpx;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
  transition: all 0.3s ease;
  border: none;
}

.login-btn.active {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.login-btn.active:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.login-btn.disabled {
  background: #e0e0e0;
  color: #999999;
  box-shadow: none;
}

.login-btn::after {
  border: none;
}

/* 底部说明 */
.footer-note {
  text-align: center;
  margin-top: 60rpx;
  position: relative;
  z-index: 2;
}

.note-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 加载状态 */
.login-btn[loading] {
  opacity: 0.8;
}

/* 响应式适配 */
@media (max-height: 700px) {
  .login-container {
    padding: 20rpx;
  }
  
  .title-section {
    margin-bottom: 20rpx;
  }
  
  .error-section {
    padding: 20rpx;
    margin-bottom: 20rpx;
  }
  
  .userinfo-section {
    padding: 40rpx 30rpx;
    margin-bottom: 40rpx;
  }
} 